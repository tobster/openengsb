<schema xmlns="http://www.w3.org/2001/XMLSchema" 
        targetNamespace="http://www.openengsb.org/engsb/acm/persist"
      	xmlns:tns="http://www.openengsb.org/engsb/acm/persist"
    	  xmlns:base="http://www.openengsb.org/engsb/AbstractServiceMessage"
      	elementFormDefault="qualified">

	<import namespace="http://www.openengsb.org/engsb/AbstractServiceMessage"
		schemaLocation="abstrac-service-message.xsd" />

	<annotation>
		<documentation><![CDATA[
		Message used to persist data into an artifact control management (acm) domain.
		]]></documentation>
	</annotation>

	<element name="acmPersistMessage" type="tns:acmPersistMessage">
		<annotation>
			<documentation><![CDATA[
			The real message wich is sent and consists out of an header and an body,
			where the body is defined by an base definition in the abstract-message.xsd
			and the body is definied for the message in this file.
			]]></documentation>
		</annotation>
	</element>

	<complexType name="acmPersistMessage">
		<annotation>
			<documentation><![CDATA[
			Type of the message to be sent to persist acm data.
			]]></documentation>
		</annotation>
		<sequence>
			<element name="header" type="base:engsbServiceHeader" />
			<element name="body" type="tns:acmPersistMessageBody" />
		</sequence>
	</complexType>

	<complexType name="acmPersistMessageBody">
		<annotation>
			<documentation><![CDATA[
			Message body which is build out of an user object and
			an complex message object which contains exactly one 
			acmMessageObjects object which contains all the required
			data for the application.
			]]></documentation>
		</annotation>
		<sequence>
      <element name="user" type="string" minOccurs="0" maxOccurs="1"/>
      <element name="email" type="string" minOccurs="0" maxOccurs="1"/>
			<element name="acmMessageObjects" type="tns:acmMessageObjects"
				minOccurs="1" maxOccurs="unbounded" />
		</sequence>
	</complexType>

	<complexType name="acmMessageObjects">
		<annotation>
			<documentation><![CDATA[
			Message object containing the required subobjects for transfering data 
			over the network which should be persisted.
			]]></documentation>
		</annotation>
		<sequence>
			<element name="user" type="string" minOccurs="1" maxOccurs="1" />
			<element name="uuid" type="string" minOccurs="1" maxOccurs="1" />
			<element name="path" type="string" minOccurs="1" maxOccurs="1" />
			<element name="acmMessageObject" type="tns:acmMessageObject"
				minOccurs="1" maxOccurs="unbounded" />
		</sequence>
	</complexType>

	<complexType name="acmMessageObject">
		<annotation>
			<documentation><![CDATA[
			The real message object containing the data which should be sent over
			 the network and which should be persisted by an content repository.
			The path element in this context describes the path where in the 
			content repostiory the file has to be persisted.
			This could be seen as a hierarchy describing e.g. customer/project/region/...
			]]></documentation>
		</annotation>
		<sequence>
			<element name="key" type="string" minOccurs="1" maxOccurs="1" />
			<element name="value" type="string" minOccurs="1" maxOccurs="1" />
		</sequence>
	</complexType>

</schema>
